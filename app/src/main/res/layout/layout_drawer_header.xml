<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="120dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@color/divider"
        android:id="@+id/iv_user_drawer_header"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_user_drawer_header"
        android:layout_toEndOf="@+id/iv_user_drawer_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aduraline"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/tv_username_drawer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username@email.com"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:id="@+id/tv_email_drawer_header"/>
    </LinearLayout>
</RelativeLayout>