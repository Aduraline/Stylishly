<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/layout_profile_container_new_post">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_close_new_post"
            android:padding="16dp">
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:materialIcon="close"
                app:materialIconColor="@color/primary_light"/>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:src="@color/divider"
            android:id="@+id/iv_user_new_post"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_profile_container_new_post"
        android:layout_above="@+id/card_post_option_container">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@null"
                    android:hint="Say Something..."
                    android:textSize="16sp"
                    android:id="@+id/edt_say_something_new_post"/>

                <com.hendraanggrian.widget.SocialTextView
                    android:id="@+id/tv_tags_new_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hashtagColor="@color/colorAccent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_photo_new_post"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/card_post_option_container"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/btn_add_photo_new_post">
                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:materialIcon="image"
                    android:layout_gravity="center"
                    app:materialIconColor="@color/primary_light"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:layout_toRightOf="@+id/btn_add_photo_new_post"
                android:layout_toEndOf="@+id/btn_add_photo_new_post"
                android:id="@+id/btn_take_photo_new_post">
                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:materialIcon="camera"
                    android:layout_gravity="center"
                    app:materialIconColor="@color/primary_light"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_toEndOf="@+id/btn_take_photo_new_post"
                android:background="?attr/selectableItemBackground"
                android:layout_toRightOf="@+id/btn_take_photo_new_post"
                android:id="@+id/btn_add_tags_new_post">
                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:materialIcon="tag"
                    android:layout_gravity="center"
                    app:materialIconColor="@color/primary_light"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_create_post_new_post">
                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:materialIcon="send"
                    android:layout_gravity="center"
                    app:materialIconColor="@color/colorAccent"/>
            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>