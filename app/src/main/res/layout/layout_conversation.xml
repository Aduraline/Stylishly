<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conversation_root"
    android:background="?attr/selectableItemBackground">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/human"
        app:civ_border_color="@color/divider"
        app:civ_border_width="1dp"
        android:id="@+id/iv_photo_conversation"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_photo_conversation"
        android:layout_toEndOf="@+id/iv_photo_conversation">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aduraline"
            android:id="@+id/tv_username_conversation"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the last message"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/tv_last_message_conversation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 minutes ago"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_time_sent_conversation"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:text="10"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_unread_messages_count_layout_conversation"
        android:background="@drawable/badge_circle"
        android:layout_centerVertical="true"/>
</RelativeLayout>