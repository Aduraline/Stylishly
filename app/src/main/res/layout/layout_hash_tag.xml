<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/layout_hash_tag_root">
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_circle_divider_color"
            android:padding="10dp"
            android:alpha="0.5"
            android:id="@+id/iv_tag"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:materialIcon="tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_tag"
            android:layout_toEndOf="@+id/iv_tag"
            android:layout_centerVertical="true"
            android:text="Tag Name"
            android:textStyle="bold"
            android:id="@+id/tv_tag_name_hash_tag_layout"/>
    </RelativeLayout>
</LinearLayout>